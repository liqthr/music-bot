{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/callback",
      "destination": "/public/callback.html"
    },
    {
      "source": "/api/:path*",
      "destination": "/server.js"
    },
    {
      "source": "/auth",
      "destination": "/server.js"
    },
    {
      "source": "/search",
      "destination": "/server.js"
    },
    {
      "source": "/youtube-search",
      "destination": "/server.js"
    },
    {
      "source": "/youtube-video/:id",
      "destination": "/server.js"
    },
    {
      "source": "/spotify-search",
      "destination": "/server.js"
    },
    {
      "source": "/soundcloud-search",
      "destination": "/server.js"
    },
    {
      "source": "/soundcloud-search-alt",
      "destination": "/server.js"
    },
    {
      "source": "/health",
      "destination": "/server.js"
    },
    {
      "source": "/:path*",
      "destination": "/public/:path*"
    }
  ],
  "headers": [
    {
      "source": "/public/(.*)\\.(css|js|png|jpg|jpeg|svg|webp|gif|woff2)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.(css|js|png|jpg|jpeg|svg|webp|gif|woff2)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}